{
    "name": "SSD",
    "n_gpu": 1,

    "arch": {
        "type": "SSD300",
        "args": {
            "n_classes": 21
        }
    },
    "data_loader": {
        "type": "PascalVOCDataLoader",
        "args":{
            "data_dir": "/home/kmh/Documents/datasets/pascal",
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.0005,
            "amsgrad": true
        }
    },
    "loss": "MultiBoxLoss",
    "metrics": [
        "mAP"
    ],
    "lr_scheduler": {
        "type": "MultiStepLR",
        "args": {
            "milestones": [689, 862],
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 1034,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
